{% extends 'layout.html.twig' %}

{% form_theme form 'PartnershipBundle:Default:form_theme.html.twig' %}

{% block title %}
    {% if partnership.id %}
        {{ 'partnership.modifier'|trans({'%name%': partnership.name}) }}
    {% else %}
        {{ 'partnership.ajouter'|trans }}
    {% endif %}
{% endblock %}

{% block content %}
    <div class="col-lg-6 col-lg-offset-3">
        <div class="well">
            {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
            <fieldset>

                {% if partnership.id %}
                    <legend><a href="{{ path('partnership_list') }}"><i class="glyphicon glyphicon-arrow-left"></i></a>
                        <i class="fa fa-lock"></i> {{ 'edit' | trans({}, 'divers') }}
                    </legend>
                {% else %}
                    <legend><a href="{{ path('partnership_list') }}"><i class="glyphicon glyphicon-arrow-left"></i></a>
                        <i class="fa fa-lock"></i>{{ 'create' | trans({}, 'divers') }}
                    </legend>
                {% endif %}

                <div class="form-group">
                    <label for="name">{{ 'name' | trans({}, 'divers') }} :</label>
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control' }}) }}
                </div>

                <div class="form-group">
                    <label for="adress">{{ 'adress' | trans({}, 'divers') }} :</label>
                    {{ form_errors(form.adress) }}
                    {{ form_widget(form.adress, { 'attr': {'class': 'form-control' }}) }}
                </div>

                <div class="form-group">
                    <label for="description">{{ 'description' | trans({}, 'divers') }} :</label>
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control' }}) }}
                </div>

                <div class="form-group">
                    <label for="picture">{{ 'image' | trans({}, 'divers') }} :</label>
                    {{ form_errors(form.image) }}
                    {{ form_row(form.image) }}
               </div>

                <div class="form-group">
                    <label for="badge">{{ 'badge' | trans({}, 'divers') }} :</label>
                    {{ form_errors(form.badge) }}
                    {{ form_widget(form.badge, { 'attr': {'class': 'form-control' }}) }}
                </div>
             {% if  app.request.attributes.get('_route') != "partnership_new"%}
                <div class="form-group">
                    <label for="enabled">{{ 'enabled' | trans({}, 'divers') }} :</label>
                    {{ form_widget(form.enabled)}}
                </div>
            {% endif %}

            </fieldset>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}