{# permet d'afficher les messages d'erreurs #}
{% if error %}
    <div class="alert alert-danger">
        {{ error.messageKey|trans(error.messageData) }}
    </div>
{% endif %}

{# Formulaire pour se loger#}
<form action="{{ path('security_login_check') }}" method="post" class="form-horizontal">
    <div id="registration_form">
        <fieldset>
            <legend><i class="fa fa-lock"></i> {{ 'user.connexion.label' | trans }} </legend>
            <div class="form-group">
                <label class="control-label required">{{ 'user.connexion.username' | trans }} :</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
            </div>
            <div class="form-group">
                <label class="control-label required">{{ 'user.connexion.password' | trans }} :</label>
                <input type="password" id="password" name="_password" class="form-control"/>
            </div>
            <div class="form-group">
                <button type="submit" id="registration_form_Register" name="registration_form[Register]"
                        class="btn btn-primary btn-lg btn-block btn">
                    {{ 'user.connexion.label' | trans }}
                </button>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        </fieldset>
    </div>
</form>

{# pour pouvoir récupérer l'accé à un compte #}
<div style="text-align:right">
    <a href="{{ path('request_password') }}">{{ 'user.connexion.password_forgotten' | trans }}?</a>
</div>
