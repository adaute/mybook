    <table class="table table-striped">
        <thead>
        <tr>
            <th>{{ 'title' | trans({}, 'divers') }}</th>
            <th>{{ 'edit' | trans({}, 'divers') }}</th>
            <th>{{ 'delete' | trans({}, 'divers') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for category in category %}
            <tr>
                <td>{{ category.title }}</td>
                {% if is_granted('ROLE_EDITOR') %}
                    <td><a href="{{ path('category_edit', { 'id': category.id }) }}"><i class="glyphicon glyphicon-pencil"></i></a></td>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <td><a href="{{ path('category_delete', { 'id': category.id }) }}"> <i class="glyphicon glyphicon-trash"></i></a></td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td>{{ 'none' | trans({}, 'divers') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
